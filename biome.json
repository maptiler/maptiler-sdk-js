{
  "files": {
    "include": ["./src/**/*.js", "./src/**/*.ts"],
    "ignore": ["dist", "build"]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": {
          "level": "off"
        }
      },
      "complexity": {
        "noUselessTernary": {
          "level": "off"
        },
        "useOptionalChain": {
          "level": "off"
        }
      }
    }
  }
}
